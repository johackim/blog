{{!< default}}

{{#post}}
<section class="pt-20">
	<div class="container m-auto px-4 lg:max-w-screen-md">
        <nav class="mb-4 whitespace-no-wrap overflow-x-auto overflow-y-hidden">
            <ol class="list-none p-0 inline-flex">
                <li class="flex items-center">
                    <a href="/">{{ t "Home" }}</a>
                    {{> "icons/chevron" }}
                </li>
                <li class="flex items-center">
                    <a href="/categories/">{{ t "Categories" }}</a>
                    {{> "icons/chevron" }}
                </li>
                <li class="flex items-center">
                    {{#primary_tag}}
                        <a href="{{url}}" aria-current="page">{{name}}</a>
                    {{/primary_tag}}
                </li>
            </ol>
        </nav>

        <div class="mb-8">
            <h1 class="h-64 border border-gray-800 flex flex-col justify-center bg-cover bg-center relative" style="background-image: url({{img_url feature_image size="m"}})">
                <div class="absolute inset-0 transition-opacity">
                    <div class="absolute inset-0 bg-gray-900 opacity-80"></div>
                </div>
                <span class="transform text-center font-bold px-4 text-3xl">{{title}}</span>
            </h1>
        </div>

        <div id="content">{{content}}</div>
	</div>
</section>
{{/post}}
