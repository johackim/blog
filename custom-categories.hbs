{{!< default}}

<section class="pt-20">
    <div class="container m-auto px-4 lg:max-w-screen-md">
        <nav class="mb-4">
            <ol class="list-none p-0 inline-flex">
                <li class="flex items-center">
                    <a href="/">{{ t "Home" }}</a>
                    {{> "icons/chevron" }}
                </li>
                <li class="flex items-center">
                    <a href="#" class="text-gray-500">{{ t "Categories" }}</a>
                </li>
            </ol>
        </nav>

        {{#get "tags" limit="all" include="count.posts" order="name asc" filter="slug:-nofeed"}}
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
            <a href="/all/" class="h-48 bg-gray-900 border border-gray-800 hover:border-gray-700 hover:text-white flex flex-col justify-center bg-cover bg-center relative">
                <div class="absolute inset-0 transition-opacity">
                    <div class="absolute inset-0 opacity-90"></div>
                </div>
                <span class="transform text-center text-xl font-bold px-4">{{ t "All posts" }}</span>
            </a>
            {{#foreach tags}}
                <a href="{{url}}" class="h-48 bg-gray-800 border border-gray-800 hover:border-gray-700 hover:text-white flex flex-col justify-center bg-cover bg-center relative" style="background-image: url({{img_url feature_image size="m"}})">
                    <div class="absolute inset-0 transition-opacity">
                        <div class="absolute inset-0 bg-gray-900 opacity-90"></div>
                    </div>
                    <span class="transform text-center text-xl font-bold px-4">{{name}}</span>
                </a>
            {{/foreach}}
        </div>
        {{/get}}
    </div>
</section>
