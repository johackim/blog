{{!< ../default}}

<style>
    body header { position: static !important; }
    body main { flex: unset !important; }
</style>

{{#if @member}}

<script>window.location = '{{@site.url}}';</script>

{{else}}

<section class="py-10 px-4 lg:px-0 mt-10">
	<div class="container m-auto lg:px-4 lg:max-w-screen-md text-center">
		<div class="pt-5 text-center">
			<p class="mt- text-3xl leading-9 font-extrabold text-white sm:text-4xl sm:leading-10 lg:text-5xl lg:leading-none">{{ t "Welcome back!" }}</p>
            <p class="mt-3 max-w-4xl mx-auto text-xl leading-7 text-gray-300 sm:mt-5 sm:text-2xl sm:leading-8">{{ t "Sign into your account again for full access" }}</p>
		</div>

        <div class="mt-4">
            <form data-members-form="signin">
                <div class="grid grid-col-2 gap-2 mx-auto lg:max-w-lg">
                    <input type="email" data-members-email class="p-2 rounded-md text-black lg:col-start-2 lg:col-span-1" placeholder="{{ t "Enter your email" }}" autofocus required />
                    <button type="submit" class="p-2 rounded-md lg:col-start-3 lg:col-span-1 border hover:border-white">
                        <span class="button-content">{{ t "Receive a login link" }}</span>
                        <span class="button-loader inline">{{> "icons/loader" }}</span>
                    </button>
                </div>
                <p class="message-error text-red-600 my-4">{{ t "Please enter a valid email address!" }}</p>
                <p class="message-success text-green-600 my-4"><b>{{ t "Great!" }}</b> {{t "Check your inbox and click the link to complete signin" }}</p>
            </form>
        </div>

        <p class="mt-4">{{ t "Don't have an account yet?" }} <a href="{{@site.url}}/signup/" class="underline">{{ t "Sign up" }}</a></p>
    </div>
</section>

{{/if}}
