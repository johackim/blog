{
    "name": "blog",
    "version": "0.1.0",
    "engines": {
        "ghost-api": "v3"
    },
    "author": {
        "name": "johackim",
        "email": "contact@johackim.com"
    },
    "scripts": {
        "start": "docker run --rm -e NODE_ENV=development -v $PWD:/var/lib/ghost/content/themes/casper -p 2368:2368 ghost:alpine",
        "dev": "webpack --watch --mode development",
        "build": "webpack --mode production",
        "test": "gscan ."
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "tailwindcss"
    ],
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@tailwindcss/ui": "^0.3.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "css-loader": "^3.4.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-plugin-import": "^2.20.2",
        "gscan": "3.3.3",
        "mini-css-extract-plugin": "^0.9.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "tailwindcss": "^1.2.0",
        "url-loader": "^4.0.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 9,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "license": "GPL-3.0"
}
